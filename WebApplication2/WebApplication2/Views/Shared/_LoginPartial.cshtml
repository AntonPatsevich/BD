@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    var r = User.Identity.Name;
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                <a class="nav-link" href=@Url.Action("Index", "Manage", routeValues: null)> @User.Identity.GetUserName()</a>
            </li>
            <li><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a class="nav-link" href=@Url.Action("Register", "Account", new { id = "registerLink" })>Регистрация</a> </li>
        <li><a class="nav-link" href=@Url.Action("Login", "Account", new { id = "loginLink" })>Вход</a></li>
    </ul>
}